<% @tiding.each do |tiding| %>
    <%= meta_description tiding.meta_description %>
    <%= meta_keywords tiding.meta_keywords %>
    <%= title tiding.title %>
    <h1>
      <%= h tiding.name %>
    </h1>
    <p>
      <%= h tiding.content.html_safe %>
    </p>
    <%= link_to "Вернуться к списку новостей", url_for(
            :controller => :tidings,
            :action => :index
    ) %>
<% end %>